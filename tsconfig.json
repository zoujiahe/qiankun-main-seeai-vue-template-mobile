{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "webpack-env"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "**/src/**/*.ts",
    "**/layout/**/*.ts",
    "**/layout/**/*.tsx",
    "**/src/**/*.tsx",
    "**/src/**/*.vue",
    "**/layout/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}
